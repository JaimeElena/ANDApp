<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRowStandings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvStandingsName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tvStandingsWin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/tvStandingsLosses"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tvStandingsPct"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tvStandingsStreak"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tvStandingsLastTen"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"/>
</LinearLayout>